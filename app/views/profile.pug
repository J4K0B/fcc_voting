doctype
html(ng-app="newApp")
    include ./includes/head.pug
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.2/angular.min.js", type ="text/javascript")
    body
        include ./includes/navbar.pug
        .container.center-align(ng-controller="AppCtrl")
            h1 Polls
            #links.card.blue-grey.darken-1(ng-repeat="poll in polls")
                .card-content.white-text
                    span.card-title {{poll.name}}
                .card-action
                    <a ng-href="/poll/{{poll._id}}">Vote</a>
            a(href="/new").btn-floating.btn-large.waves-effect.waves-light.red
                                    i.material-icons add        
        include ./includes/scripts.pug