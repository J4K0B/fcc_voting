doctype
html(ng-app="myApp")
    include ./includes/head.pug
    script(src="https://www.gstatic.com/charts/loader.js")
    include ./includes/scripts.pug
    script(src="../../controllers/showPoll.js")
    
    body
        include ./includes/navbar.pug
        .container
            h2.center-align Create a New Account
            .row
                form.col.s12(method="post" action="/signup")
                    .row
                        .input-field.col.s12
                            input#email.validate(type="email" name="email")
                            label(for="email") Email
                    .row
                        .input-field.col.s12
                            input#password.validate(type="password" name="password")
                            label(for="password") Password
                    .row
                        button.btn.waves-effect.waves-light(type="submit" name="action") Sign up
                            i.material-icons.right send